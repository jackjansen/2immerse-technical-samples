<tl:document 
        xmlns:tic="http://jackjansen.nl/2immerse/component" 
        xmlns:tim="http://jackjansen.nl/2immerse" 
        xmlns:tl="http://jackjansen.nl/timelines" 
        xmlns:tt="http://jackjansen.nl/2immerse/livetrigger" 
        xmlns:au="http://jackjansen.nl/2immerse/authoring" 
        title="Test the live triggering tool">
    <tl:par tl:end="master">
        <tl:ref title="main video" tic:mediaUrl="//origin.platform.2immerse.eu/media/rsc/hamlet/videos/hamlet-trailer/manifest.mpd" tic:syncMode="master" tim:class="video" tl:prio="high" xml:id="main_video" tim:constraintId="stage"/>
        <tl:par xml:id="eventPlayback" tt:wantstatus="true" >
            <tt:events>
                <tl:seq tt:name="5 second splash" xml:id="event1" tt:previewUrl="previews/splash.jpg" tt:longdesc="Shows Pow! image for 5 seconds" tt:verb="Trigger Pow!">
                    <tt:parameters>
                        <tt:parameter tt:name="begin time" tt:parameter="tl:sleep/@tt:_realDur" tt:type="set" tt:value="{tt:clock(..)}" />
                    </tt:parameters>
                    <tl:sleep tl:dur="0" />
                    <tl:par>
                        <tl:sleep tl:dur="5" tl:prio="high" />
                        <tl:ref tic:mediaUrl="//origin.platform.2immerse.eu/dmapps/technical-samples/media/300-images/fivesecondsplash.png" tim:class="image" tim:url="//origin.platform.2immerse.eu/dmapp-components/image/image.html"  tim:constraintId="overlay"/>
                    </tl:par>
                </tl:seq>
                <tl:seq tt:name="Adjustable duration splash" xml:id="event2" tt:previewUrl="previews/adjustable-splash.jpg" tt:longdesc="Shows Wow! image with adjustable duration">
                    <tt:parameters>
                        <tt:parameter tt:name="duration" tt:parameter="tl:par/tl:sleep/@tl:dur" tt:type="duration" tt:required="true"/>
                        <tt:parameter tt:name="begin time" tt:parameter="tl:sleep/@tt:_realDur" tt:type="set" tt:value="{tt:clock(..)}" />
                    </tt:parameters>
                    <tl:sleep tl:dur="0" />
                    <tl:par>
                        <tl:sleep tl:dur="5" tl:prio="high" />
                        <tl:ref tic:mediaUrl="//origin.platform.2immerse.eu/dmapps/technical-samples/media/300-images/nsecondsplash.png" tim:class="image" tim:url="//origin.platform.2immerse.eu/dmapp-components/image/image.html"   tim:constraintId="overlay"/>
                    </tl:par>
                </tl:seq>
                <tl:seq tt:name="Stoppable duration splash" xml:id="event3" tt:previewUrl="previews/stoppable-splash.jpg" tt:longdesc="Shows paint splat with adjustable duration which can be stopped prematurely by the operator" tt:modVerb="Remove splat">
                    <tt:parameters>
                        <tt:parameter tt:name="duration" tt:parameter="tl:par/tl:sleep/@tl:dur" tt:type="duration" tt:required="true"/>
                        <tt:parameter tt:name="begin time" tt:parameter="tl:sleep/@tt:_realDur" tt:type="set" tt:value="{tt:clock(..)}" />
                    </tt:parameters>
                    <tt:modparameters>
                        <tt:parameter tt:name="duration" tt:parameter="tl:par/tl:sleep/@tl:dur" tt:type="set" tt:value="{tt:clock(.)}" />
                    </tt:modparameters>
                    <tl:sleep tl:dur="0" />
                    <tl:par>
                        <tl:sleep tl:dur="999999" tl:prio="high" />
                        <tl:ref tic:mediaUrl="//origin.platform.2immerse.eu/dmapps/technical-samples/media/300-images/stoppablesplash.png" tim:class="image" tim:url="//origin.platform.2immerse.eu/dmapp-components/image/image.html"   tim:constraintId="overlay"/>
                    </tl:par>
                </tl:seq>
            </tt:events>
        </tl:par>
		<au:rawLayout>{
		"version": 4,
		"dmapp": "200",
		"constraints": [
			{
				"constraintId" : "stage",
				"personal" : {
					"priority": 0,
					"audio": true
				},
				"communal" : {
					"priority": 1,
					"audio": true,
					"targetRegions": [ "stage" ]
				}
			},
			{
			    "constraintId" : "overlay",
			    "personal" : {
			        "priority" : 0
			    },
			    "communal" : {
			        "priority" : 1,
			        "targetRegions" : ["overlay"]
			    }
			}
		],
		"layoutModel" : "packer"
	}
	</au:rawLayout>
	<au:rawClient>{
	"appendHtmlUrl": "//origin.platform.2immerse.eu/dmapps/technical-samples/300-events/appended.html",
	"regions": [
		{
			"id": "stage",
			"elementSelector": "#region-stage",
			"resizable": true,
			"width": "100%",
			"height": "100%"
		},
		{
			"id": "overlay",
			"elementSelector": "#region-overlay",
			"resizable": true,
			"width": "25%",
			"height": "25%"
		}
	]
	}
	</au:rawClient>
    </tl:par>
</tl:document>

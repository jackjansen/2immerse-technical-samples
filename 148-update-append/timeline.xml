<tl:document
  xmlns:tl="http://jackjansen.nl/timelines"
  xmlns:tim="http://jackjansen.nl/2immerse"
  xmlns:tic="http://jackjansen.nl/2immerse/component"
  xmlns:tlcheck="http://jackjansen.nl/timelines/check"
  title="Test a single MP4 video">

  <tl:par>

    <tl:ref tim:class="video"
          xml:id="main_video"
          tic:syncMode="master"
          tic:mediaUrl="../../../media/rsc/hamlet/videos/hamlet-trailer.mp4"
          tlcheck:dur="81"
          title="main video"/>

    <tl:ref tim:class="HtmlSnippetDMAppComponent"
          tim:url="https://origin.platform.2immerse.eu/dmapp-components/html-snippet/html-snippet.html"
          xml:id="description"
          tic:html="hamlet trailer"
          />


    <tl:seq>
        <tl:par tl:end="master">
            <tl:sleep tl:dur="6" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="logo"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="4" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="coffin"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="3" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="arm"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="3" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="gun"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="6" tl:prio="high"/>
            <tim:update tim:target="description" tic:html="couple"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="3" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="hamlet"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="5" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="witching"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="9" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="churchyard"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="3" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="party"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="2" tl:prio="high"/>
            <tim:update tim:target="description" tim:append="true" tic:html="skull"/>
        </tl:par>
        
        <tl:par tl:end="master">
            <tl:sleep tl:dur="5" tl:prio="high"/>
            <tim:update tim:target="description" tic:html="I couldn't be bothered about the rest..."/>
        </tl:par>
        
        
        <!-- Bug workaround -->
        <tl:sleep tl:dur="1"/>
    </tl:seq>

  </tl:par>

</tl:document>

<tl:document
  xmlns:tl="http://jackjansen.nl/timelines"
  xmlns:tim="http://jackjansen.nl/2immerse"
  xmlns:tic="http://jackjansen.nl/2immerse/component"
  xmlns:tlcheck="http://jackjansen.nl/timelines/check"
  title="Test a single MP4 video">

  <tl:par>


      <tl:ref tim:class="video"
              xml:id="main_video"
              tim:constraintId="overlayTL"
              tic:syncMode="master"
              tic:mediaUrl="../../../media/rsc/hamlet/videos/hamlet-trailer.mp4"
              tlcheck:dur="81"
              title="main video"/>

      <tl:ref tim:class="scroll-text"
              tim:url="/dmapp-components/scroll-text/scroll-text.html"
              tim:constraintId="stage"
              xml:id="description"
              tic:scriptUrl="../media/trailer-description.json"
              tlcheck:dur="81"
              title="description of the video"/>
      <tl:seq>
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayTR" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayBL" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayBR" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayTL" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayTR" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayBL" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayBR" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayTL" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayTR" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayBL" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayBR" />
        <tl:sleep tl:dur="5" />
        <tim:update tim:target="main_video" tim:constraintId="overlayTL" />
      </tl:seq>

  </tl:par>

</tl:document>

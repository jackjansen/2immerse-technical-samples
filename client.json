				{
					"name": "203",
					"description": "203-6video-mp4: the same mp4 video, in parallel, twice on TV and 4 times on the handheld",
					"content": {
						"serviceInput": {
							"layout": "203-6video-mp4/layout.json",
							"timeline": "203-6video-mp4/timeline.xml"
